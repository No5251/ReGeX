<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_comment"
    android:minWidth="256dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/Header"
            android:text="@string/status" />

        <LinearLayout style="@style/OptionItem">

            <TextView
                style="@style/OptionName"
                android:text="@string/round" />

            <TextView
                android:id="@+id/round"
                style="@style/OptionValue" />

        </LinearLayout>

        <LinearLayout style="@style/OptionItem">

            <TextView
                style="@style/OptionName"
                android:text="@string/diff" />

            <TextView
                android:id="@+id/diff"
                style="@style/OptionValue" />

        </LinearLayout>

        <TextView
            style="@style/Header"
            android:text="@string/settings" />

        <LinearLayout style="@style/OptionItem">

            <Button
                android:id="@+id/reset"
                style="@style/OptionButton"
                android:text="@string/clear" />

        </LinearLayout>

        <LinearLayout style="@style/OptionItem">

            <!-- text programmatically set -->
            <Button
                android:id="@+id/charm"
                style="@style/OptionButton" />

        </LinearLayout>

        <LinearLayout style="@style/OptionItem">

            <!-- text programmatically set -->
            <Button
                android:id="@+id/notif"
                style="@style/OptionButton" />

        </LinearLayout>

        <TextView
            style="@style/Header"
            android:text="@string/set_mode" />

        <Spinner
            android:id="@+id/mode_selector"
            style="@style/OptionButton"
            android:layout_width="match_parent" />

        <Button
            android:id="@+id/footer"
            style="@style/Header"
            android:text="@string/footer"
            android:textAllCaps="false" />
    </LinearLayout>
</ScrollView>
